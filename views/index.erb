<%= erb :_site_description unless internal_visitor? %>

<div id="submitform">
	<div class="inner">
		<h2>Submit a post</h2>
		<%= erb :_post_post %>
	</div>
</div>

<section class="inner posts">
	<% if @page == 1 && !current_user %>
		<%= Cache[:front_page] ||= erb :posts %>
	<% else %>
		<%= erb :posts %>
	<% end %>
</section>

<div id="loading"><i class="fa fa-spinner fa-pulse"></i> Loading older posts <i class="fa fa-spinner fa-pulse"></i></div>
