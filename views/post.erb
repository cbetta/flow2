<%= erb :_site_description unless internal_visitor? %>

<section class="inner post">

<% if @post %>
	<article class="post <%= @post.avatar? ? "withavatar" : "noavatar" %>" data-id="<%= @post.id %>" data-timestamp="<%= @post.timestamp %>" data-page="<%= @page %>">
	  <div class="avatar" <% if @post.avatar? %>style="background-image: url(<%= @post.avatar_url %>)"<% end %>></div>
	  <div class="body">
	    <h1><%= @post.title %></h1>
	  <div class="metadata"><% if @post.author %>by <cite><%= @post.author %></cite> &mdash; <% end %><time><%= @post.time %>	</time></div>
	    <div class="content"><%= @post.rendered_content %></div>
	    
	  </div>
  	<section class="comments">
  		<% if @post.comments.size > 0 %>
	  		<h3>Comments</h3>
	  		<% @post.comments.each do |comment| %>
	  			<%= erb :_comment, locals: { comment: comment } %>
	  		<% end %>
	  	<% end %>

	  	<h3>Post a comment</h3>
	  	<%= erb :_post_comment %>
  	</section>
	</article>


<% else %>
	<h2>No such post</h2>	
<% end %>

</section>
