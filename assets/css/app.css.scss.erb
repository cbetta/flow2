$theme_color: #c00;
$text_color: #424242;
$background_color: #f5f6f6;
$background_color_header: $theme_color;

$fonts: "Droid Sans Monox", "Cousinex", "Liberation Monox", "Source Code Prox", "Input Monox", Menlo, Consolas, "Ubuntu Mono", monospace;
$fonts_headers: Montserrat;
$font_size: 16px;
$line_height: 1.7em;
$bold_weight: 400;

$inner_width: 50em;
$avatar_size: 48px;
$post_padding: $avatar_size / 1.5;

BODY {
  font-family: $fonts;
  font-size: $font_size;
  line-height: $line_height;
  color: $text_color;
  background-color: $background_color;
  margin: 0; padding: 0;
}

HEADER.top {
  margin: 0; padding: 10px 0;
  width: 100%;
  background-color: $background_color_header;

  A { color: inherit; text-decoration: none }

  H1 {
    font-weight: $bold_weight;
    font-family: $fonts_headers;
    color: #fff;
    font-size: 38px;
    line-height: 1.1em;
    margin-bottom: 0;
    SPAN {
      font-size: 20px;
      display: block;
      margin-top: 0;
      padding: 0;
    }
  }
}

A { color: $theme_color; }

.inner {
  max-width: $inner_width;
  min-width: 20em;
  margin: 1em auto;
  padding: 0 1em;
}


article.post {
  margin: 2em auto;
  padding-left: $post_padding;
  padding-left: 0;

  &.read {
    transition: opacity 0.3s ease-out;
    opacity: 0.5;
    &:hover { opacity: 1.0; }
  }

  h1 {
    margin: 0;
    padding: 0;
    display: inline-block;
    vertical-align: baseline;
    font-family: $fonts_headers;
    font-weight: $bold_weight;
    background-color: #fdd;
    color: #c00;
    padding: 0px 2px 0px;
    font-size: 1.0em;
    margin-left: -$post_padding;

    //display: inline;
    background-color: #ffd;
    background: #fdd;
    color: $text_color;
    margin-right: 4px;
    A { text-decoration: none; }
  }

  P { display: inline; }

  .body { margin-left: $avatar_size + $post_padding + 16px; }

  &.withavatar {
    //padding-left: 0;
  }

  .avatar {
    float: left;
    width: $avatar_size;
    height: $avatar_size;
    border: 1px solid #ccc;
    margin-bottom: 8px;
    background-size: cover;
  }

  .metadata {
    color: #999;
    font-size: 0.75em;
    line-height: 1.5em;
    text-transform: uppercase;
  }

}

@media screen and (max-width: 640px) {
  article.post {
    padding-left: 0;
    h1 { margin-left: -8px; }
  }
}
