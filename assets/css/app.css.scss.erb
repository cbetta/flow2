$fonts: "Droid Sans Mono", "Cousine", "Liberation Mono", "Source Code Pro", "Input Mono", Menlo, Consolas, "Ubuntu Mono";

BODY {
  font-family: $fonts;
  font-size: 16px;
  line-height: 1.7em;
  color: #424242;
  background-color: #f5f6f6;
  margin: 0; padding: 0;
}

H2 {
  font-weight: 500;
  color: #fff;
  font-size: 38px;
  line-height: 1.6em;
}

.top {
  margin: 0; padding: 20px 0;
  width: 100%;
  background-color: #cef;
  background-color: #cc0000;
}

.inner {
  max-width: 40em;
  margin: 1em auto;
}

article.post {
  margin: 2em auto;
  padding-left: 40px;
  strong {
    font-weight: bold;
    background-color: #fdd;
    color: #c00;
    padding: 3px 6px 1px;
    text-transform: uppercase;
    font-size: 1.0em;
    display: inline-block;
    margin-bottom: -3px;
    margin-left: -40px;
  }
  &.read {
    opacity: 0.5;
    &:hover {
      opacity: 1.0;
    }
    /* color: #aaa;
    STRONG { color: #c99; }
    A {
      color: #aaa;
    } */
  }
}

A { text-decoration: underline; background-color: inherit; font-weight: normal; color: #c00; }
