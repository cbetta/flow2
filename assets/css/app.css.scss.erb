$theme_color: <%= Config[:theme_color] || "#c00" %>;
$text_color: <%= Config[:text_color] || "#424242" %>;
$background_color: <%= Config[:background_color] || "#f5f6f6" %>;
$background_color_header: <%= Config[:header_background_color] || "$theme_color" %>;
$error_background_color: <%= Config[:error_background_color] || "#fee" %>;

$fonts_headers: <%= Config[:header_fonts] || %{"proxima-nova", ubuntu, "helvetica neue", helvetica, sans-serif} %>;
$fonts_mono: "Droid Sans Mono", "Cousinex", "Liberation Monox", "Source Code Prox", "Input Monox", Menlo, Consolas, "Ubuntu Mono", monospace;
$fonts: <%= Config[:fonts] || %{$fonts_headers, $fonts_mono} %>;
$font_size: <%= Config[:font_size] || "16px" %>;
$line_height: <%= Config[:line_height] || "1.4em" %>;
$bold_weight: <%= Config[:bold_weight] || "normal" %>;

$top_padding: 54px;
$inner_width: <%= Config[:inner_width] || "50em" %>;
$avatar_size: <%= Config[:avatar_width] || "48px" %>;

BODY {
  font-family: $fonts;
  font-size: $font_size;
  line-height: $line_height;
  color: $text_color;
  background-color: $background_color;
  margin: 0;
  padding: 0;
  .admin { display: none }
}

#mainarea {
  margin-top: $top_padding;
  overflow: auto;
}

BODY.admin .admin {
  display: inline;
}

H1, H2, H3 {
  font-weight: $bold_weight;
  font-family: $fonts_headers;
}

H3 { font-size: 1.3em; }

A { color: $theme_color; }

CITE { font-style: normal; }

PRE CODE {
  padding: 1em 2em;
  display: block;
  margin-right: 1em;
  font-family: $fonts_mono;
  font-size: 0.9em;
  line-height: 1.6em;
  background-color: #eff;
}

.inner {
  max-width: $inner_width;
  min-width: 300px;
  margin: 18px auto;
  padding: 0 12px;
}

HEADER.top {
  position: fixed;
  padding: 0;
  top: 0px;
  z-index: 100;
  width: 100%;
  background-color: $background_color_header;
  border-bottom: 1px solid darken($theme_color, 8%);

  .inner { margin-top: 14px; margin-bottom: 14px; padding-right: 0; }

  .menu {
    font-size: 1.2em;
    .optional { margin-left: 0.4em; }
    UL { list-style-type: none; padding: 0; }
    LI { float: right; padding: 0; }
    A {
      color: #fff;
      padding: 0px 16px;
    }
    .avatar {
      margin-right: 12px;
    }
  }

  A { color: inherit; text-decoration: none; }

  H1 {
    margin: 0;
    font-size: 24px;
    line-height: 22px;
    SPAN { display: none; }
    color: #fff;
    font-weight: $bold_weight;

    A:hover { margin-left: -8px; }
  }
  A:hover {
    background-color: #fff;
    color: $background_color_header;
    padding: 12px 8px 8px;
    margin-left: 8px;
    margin-right: 8px;
  }
}

.avatar {
  float: left;
  width: $avatar_size;
  height: $avatar_size;
  border-radius: 50%;
  border: 0px solid transparent;
  margin-bottom: 8px;
  background-size: cover;
  //-webkit-filter: grayscale(50%) opacity(0.5);
  &.approved {
    //-webkit-filter: none;
    //border: 2px solid #c66;
    //margin-left: -2px;
    //margin-top: -2px;
    //box-shadow: 0px 0px 8px #ff0;
  }
  &.small {
    width: 22px;
    height: 22px;
  }
}


ARTICLE.post {
  margin: 2.4em auto;
  padding-left: 0;

  .more {
    color: #999;
    display: inline;
    font-size: 0.8em;
    text-transform: uppercase;
    &.comment A {
      font-size: 0.9em;
    }
  }

  &.read {
    transition: opacity 0.3s ease-out;
    opacity: 0.5;
    &:hover { opacity: 1.0; }
  }

  h1 {
    margin: 0;
    padding: 0;
    display: inline-block;
    vertical-align: baseline;
    font-family: $fonts_headers;
    font-weight: $bold_weight;
    color: #c00;
    padding-right: 7px;
    font-size: 1.4em;
    line-height: 1.2em;
    margin-bottom: 4px;
    color: $text_color;
    margin-right: 4px;
    orphans: 3;
    A {
      text-decoration: none;
      color: #222;
      &:visited {
        color: #999;
      }
      &:hover {
        color: $theme_color !important;
        text-decoration: underline;
      }
    }

  }

  P { margin: 0 }

  .body, .comments { margin-left: $avatar_size + 16px; }

  .body {
    A:visited {
        color: #999;
        font-weight: 300;
    }
  }

  .metadata {
    color: #bbb;
    font-size: 0.9em;
    line-height: 1.5em;
    text-transform: uppercase;
    CITE {
      color: #666;
    }
    margin-top: 4px;
  }

  .comment.inline {
    font-size: 0.9em;
    color: #999;
    line-height: 1.3em;
    margin-left: 2em;
    margin-top: 8px;
    .content, .metadata { display: inline; }
  }
}

SECTION.comments {
  .comment {
    margin-bottom: 2em;
    .content { background-color: #fff; padding: 0.2em 1em; }
  }
}

BODY.post ARTICLE.post {
  margin-top: 24px;
  p {
    margin: 1em 0;
  }
  h1 {
    background-color: inherit;
    display: block;
    font-size: 2.0em;
    line-height: 1.3em;
    margin-left: -1px;
    padding: 0;
    color: #222;
    font-weight: bold;
    margin-top: 0.2em;
  }
  .body, .comments { margin-left: $avatar_size + 16px; }
  > .body {
    .content {
      margin: 1em 0 2em 0;
      font-size: 1.1em;
      line-height: $line_height;
    }
  }
  .metadata {
      font-size: 0.9em;
    }
  &.noavatar {
    .body, .comments { margin-left: 0; }
    .comment .body { margin-left: $avatar_size + 16px; }
    .avatar { display: none; }
    .comment.withavatar .avatar { display: block; }
  }
}

#sitedescription {
  text-align: center;
  margin-bottom: 8px;


  .inner {
    border: 1px solid #ddd;
    background-color: #fff;
    position: relative;
    margin-top: 12px;
    margin-bottom: 0px;
    padding-top: 16px;
    padding-bottom: 10px;

    a.close {
      position: absolute;
      right: 8px;
      top: 0px;
      font-size: 1.4em;
      cursor: pointer;
    }
  }
  h2 {
    margin: 0;
    font-weight: normal;
    font-size: 2.0em;
    line-height: $line_height;
    color: #666;
  }
  div.description {
    font-size: 1.2em;
    line-height: $line_height;
  }
}

.postbox {
  &.noavatar {
    .avatar { border: 1px dashed #aaa; }
  }
}

#submitform {
  display: none;
  margin-bottom: 20px;
  .inner {
    background-color: #eee;
    padding-top: 1em;
    padding-bottom: 1em;
    //border-radius: 10px;
    border: 1px solid #ccc;
    padding-left: 1.2em;
    padding-right: 1.2em;
  }
  h2 {
    margin-top: 8px;
  }
}

#loading {
  display: none;
  color: #bbb;
  margin-bottom: 30px;
  font-weight: bold;
  font-size: 24px;
  font-family: $fonts_headers;
  text-align: center;
}

#preview {
  display: none;
  ARTICLE.post {
    background: white; padding: 1em 0; margin: 0;
  }
}

H3.divider {
  color: #999;
  font-size: 1.0em;
  padding: 9px 0 8px;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  padding-left: 12px;
  font-weight: normal;
  background-color: #eee;
  text-align: left;
  text-transform: uppercase;
  margin-top: 12px;
  margin-left: -12px;
  margin-right: -12px;
  margin-bottom: -18px;
  font-weight: bold;

  // Never have back to back date dividers
  + H3.divider {
    display: none;
  }
}

@-moz-keyframes pulsing {
  from { background-color: #c00; }
  50% { background-color: #f60; }
  to { background-color: #c00; }
}

@-webkit-keyframes pulsing {
  from { background-color: #c00; }
  50% { background-color: #f60; }
  to { background-color: #c00; }
}

@keyframes pulsing {
  from { background-color: #c00; }
  50% { background-color: #f60; }
  to { background-color: #c00; }
}

@-moz-keyframes flashcomment {
  from { background-color: #fff; }
  50% { background-color: #ff9; }
  to { background-color: #fff; }
}

@-webkit-keyframes flashcomment {
  from { background-color: #fff; }
  50% { background-color: #ff9; }
  to { background-color: #fff; }
}

@keyframes flashcomment {
  from { background-color: #fff; }
  50% { background-color: #ff9; }
  to { background-color: #fff; }
}

.postbox {
  .help {
    float: left;
  }
  .help, .right, .error {
    font-size: 0.9em;
    color: #999;
    line-height: 1.2em;
    margin-bottom: 8px;
  }
  .error { color: #900; }
  FORM {
    margin-left: $avatar_size + 16px;
    TEXTAREA {
      min-height: 160px;
    }
    .errored { background-color: $error_background_color; }
    TEXTAREA, INPUT[type='text'] {
      font-size: 1.1em;
      max-width: 100%;
      box-sizing: border-box;
      padding: 8px;
      margin-bottom: 8px;
      font-family: $fonts;
      display: block;
      border: 1px solid #bbb;
    }

    INPUT.title {
      font-weight: $bold_weight;
      font-size: 1.2em;
    }

    BUTTON {
      cursor: pointer;
      padding: 2px 24px;
      font-size: 1.3em;
      font-family: $fonts;
      line-height: $line_height;
      font-weight: normal;
      background-color: $theme_color;
      color: #fff;
      border: 0;
      border-radius: 12px;
      margin-bottom: 8px;
      &.preview {
        background-color: #aaa;
      }
      BODY.oauth-successful & {
        -moz-animation-name: pulsing;
        -moz-animation-duration: 1s;
        -moz-animation-iteration-count: infinite;
        -webkit-animation-name: pulsing;
        -webkit-animation-duration: 1s;
        -webkit-animation-iteration-count: infinite;
        animation-name: pulsing;
        animation-duration: 1s;
        animation-iteration-count: infinite;
      }
    }
  }
}

.comment .flashing {
  -moz-animation-name: flashcomment;
  -moz-animation-duration: 1s;
  -moz-animation-iteration-count: 4;
  -webkit-animation-name: flashcomment;
  -webkit-animation-duration: 1s;
  -webkit-animation-iteration-count: 4;
  animation-name: flashcomment;
  animation-duration: 1s;
  animation-iteration-count: 4;
}

.right {
  display: block;
  text-align: right;
}


// For most mobile and small desktop screen scenarios
@media screen and (max-width: 620px) {
  .menu .optional { display: none; }

  #submitform .inner { border-radius: 0; border-top: 1px solid #ccc; border-bottom: 1px solid #ccc; }

  BODY.post ARTICLE.post, article.post {
    padding-left: 0;
    h1 { margin-left: 0px; }
    .avatar { float: right; margin-left: 12px; }
    .body, .comments { margin-left: 0px; }
    .comments .body { margin-left: $avatar_size + 16px; }
  }
  SECTION.comments {
    .avatar { float: left !important; margin-left: 0 !important; }
  }
  .postbox {
    FORM { margin-left: 0; }
    .avatar { display: none !important; }
  }
  BODY.index ARTICLE.post {
    h1 {
      display: block;
      background-color: inherit;
      A { color: #222; font-weight: bold; }
    }
  }
}

// For very small screens, sacrifices must be made
@media screen and (max-width: 420px) {
  HEADER.top {
    .avatar { display: none }
    .menu A {
      padding: 0px 10px;
    }
  }
}

BODY.expert {
  HEADER.top .menu .optional { display: none; }
}

