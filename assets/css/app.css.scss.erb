$theme_color: #c00;
$text_color: #424242;
$background_color: #f5f6f6;
$background_color_header: $theme_color;

$fonts: "Droid Sans Mono", "Cousine", "Liberation Mono", "Source Code Pro", "Input Mono", Menlo, Consolas, "Ubuntu Mono", monospace;
$font_size: 16px;
$line_height: 1.7em;
$bold_weight: 500;

$inner_width: 40em;

BODY {
  font-family: $fonts;
  font-size: $font_size;
  line-height: $line_height;
  color: $text_color;
  background-color: $background_color;
  margin: 0; padding: 0;
}

H2 {
  font-weight: $bold_weight;
  color: #fff;
  font-size: 38px;
  line-height: 1.6em;
}

A { color: $theme_color; }


header.top {
  margin: 0; padding: 20px 0;
  width: 100%;
  background-color: $background_color_header;
}

.inner {
  max-width: $inner_width;
  margin: 1em auto;
}


article.post {
  margin: 2em auto;
  padding-left: 40px;
  strong {
    font-weight: bold;
    background-color: #fdd;
    color: #c00;
    padding: 3px 6px 1px;
    text-transform: uppercase;
    font-size: 1.0em;
    display: inline-block;
    margin-bottom: -3px;
    margin-left: -40px;
  }
  &.read {
    transition: opacity 0.3s ease-out;
    opacity: 0.5;
    &:hover { opacity: 1.0; }
  }
}

