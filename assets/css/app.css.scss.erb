$theme_color: #c00;
$text_color: #424242;
$background_color: #f5f6f6;
$background_color_header: $theme_color;

$fonts_headers: "proxima-nova", ubuntu, "helvetica neue", helvetica, sans-serif;
$fonts: $fonts_headers, "Droid Sans Mono", "Cousinex", "Liberation Monox", "Source Code Prox", "Input Monox", Menlo, Consolas, "Ubuntu Mono", monospace;
$font_size: 16px;
$line_height: 1.5em;
$bold_weight: 600;

$inner_width: 50em;
$avatar_size: 48px;
$post_padding: $avatar_size / 1.5;

BODY {
  font-family: $fonts;
  font-size: $font_size;
  line-height: $line_height;
  color: $text_color;
  background-color: $background_color;
  margin: 0; padding: 0;
}

H1, H2, H3 {
  font-weight: $bold_weight;
  font-family: $fonts_headers;
}

HEADER.top {
  margin: 0; padding: 10px 0;
  width: 100%;
  background-color: $background_color_header;

  A { color: inherit; text-decoration: none }

  H1 {
    color: #fff;
    font-size: 38px;
    line-height: 1.3em;
    margin-bottom: 0;
    font-weight: 500;
    SPAN {
      font-size: 20px;
      display: block;
      margin-top: 0;
      padding: 0;
    }
    A:hover {
      background-color: #fff;
      color: $background_color_header;
      padding: 8px 16px;
      margin-left: -16px;
    }
  }

  BODY.fix-header & {
    position: fixed;
    top: 0px;
    height: 50px;
    H1 { font-size: 20px; SPAN { display: none; }}
  }
}

BODY.fix-header {
  padding-top: 160px;
}

A { color: $theme_color; }

.inner {
  max-width: $inner_width;
  min-width: 20em;
  margin: 1em auto;
  padding: 0 1em;
}


ARTICLE.post {
  margin: 2.4em auto;
  padding-left: $post_padding;
  padding-left: 0;

  &.read {
    transition: opacity 0.3s ease-out;
    opacity: 0.5;
    &:hover { opacity: 1.0; }
  }

  h1 {
    margin: 0;
    padding: 0;
    display: inline-block;
    vertical-align: baseline;
    font-family: $fonts_headers;
    font-weight: $bold_weight;
    background-color: #fdd;
    color: #c00;
    padding: 0px 7px 0px;
    font-size: 1.3em;
    line-height: 1.2em;
    margin-bottom: 4px;
    margin-left: -$post_padding;

    //display: inline;
    background-color: #ffd;
    background: #fdd;
    color: $text_color;
    margin-right: 4px;
    A {
      text-decoration: none;
      &:hover {
        background-color: #fcc;
        color: #c00 !important;
      }
    }

  }

  P { margin: 0 }

  .body, .comments { margin-left: $avatar_size + $post_padding + 16px; }
  .body, .comments { margin-left: $avatar_size + 16px; }
  H1 { margin-left: 0; padding: 0; }

  &.withavatar {
    //padding-left: 0;
  }

  .avatar {
    float: left;
    width: $avatar_size;
    height: $avatar_size;
    border: 1px solid #ccc;
    margin-bottom: 8px;
    background-size: cover;
  }

  .metadata {
    color: #bbb;
    font-size: 0.8em;
    line-height: 1.5em;
    text-transform: uppercase;
    CITE {
      color: #666;
    }
    margin-top: 3px;
  }

  .comment.inline {
    font-size: 0.9em;
    color: #999;
    line-height: 1.3em;
    margin-left: 2em;
    margin-top: 8px;
    .content, .metadata { display: inline; }
  }
}

SECTION.comments {
  .comment {
    margin-bottom: 2em;
  }
}

BODY.post ARTICLE.post {
  h1 {
    background-color: inherit;
    display: block;
    font-size: 2.0em;
    line-height: 1.3em;
    margin-left: -1px;
    padding: 0;
    margin-top: 0.2em;
  }
  .body, .comments { margin-left: $avatar_size + 16px; }
  > .body {
    .content {
      margin: 1em 0 2em 0;
      font-size: 1.1em;
      line-height: $line_height;
    }
    
  }
  .metadata {
      font-size: 0.9em;
    }
  &.noavatar {
    .body, .comments { margin-left: 0; }
    .comment .body { margin-left: $avatar_size + 16px; }
    .avatar { display: none; }
    .comment.withavatar .avatar { display: block; }
  }

  //.avatar { background-color: #eee; }
}

@media screen and (max-width: 640px) {
  BODY.post ARTICLE.post, article.post {
    padding-left: 0;
    h1 { margin-left: 0px; }
    .avatar { display: none; }
    .body, .comments { margin-left: 0px; }
  }
  BODY.index ARTICLE.post {
    h1 {
      display: block;
      background-color: inherit;
      A { color: #222; font-weight: bold; }
    }
  }
}

BODY.index ARTICLE.post H1 {
      background-color: inherit;
      A { color: #222; font-weight: bold; }
}

#loading {
  display: none;
  color: #bbb;
  margin-bottom: 30px;
  font-weight: bold;
  font-size: 24px;
  font-family: $fonts_headers;
  text-align: center;
}
